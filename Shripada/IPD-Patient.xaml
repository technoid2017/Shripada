                        <RadioButton Content="Other" FontSize="20" GroupName="Sex" Height="40" HorizontalAlignment="Left" Margin="412,478,0,0" Name="dradioOther" VerticalAlignment="Top" VerticalContentAlignment="Center" />
                        <RadioButton Content="Female" FontSize="20" GroupName="Sex" Height="40" HorizontalAlignment="Left" IsChecked="True" Margin="318,478,0,0" Name="dradioFemale" VerticalAlignment="Top" VerticalContentAlignment="Center" />
                        <RadioButton Content="Cashless" FontSize="20" GroupName="Mediclaim" Height="40" HorizontalAlignment="Left" Margin="240,602,0,0" Name="drdCheckBox" VerticalAlignment="Top" VerticalContentAlignment="Center" />
                        <RadioButton Content="Reinburse" FontSize="20" GroupName="Mediclaim" Height="40" HorizontalAlignment="Left" Margin="240,648,0,0" Name="dradioReinburse" VerticalAlignment="Top" VerticalContentAlignment="Center" />
